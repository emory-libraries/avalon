<%= form_tag search_action_url, method: :get, class: 'search-query-form', role: 'search' do %>
  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
  <% if search_fields.length > 1 %>
    <label for="search_field" class="sr-only"><%= t('blacklight.search.form.search_field.label') %></label>
  <% end %>
  <div id="search-fields" class="input-group col-md-12">
    <% if search_fields.length > 1 %>
        <%= select_tag(:search_field,
                       raw("<option>Common Fields</option><option>Title</option><option>Creator</option><option>Subject</option><option>All Fields</option>"),
                       title: t('blacklight.search.form.search_field.title'),
                       id: "search_field",
                       class: "custom-select search-field") %>
    <% elsif search_fields.length == 1 %>
      <%= hidden_field_tag :search_field, search_fields.first.last %>
    <% end %>

    <label for="q" class="sr-only"><%= t('blacklight.search.form.search.label') %></label>
    <%= text_field_tag :q, params[:q], placeholder: "Search Digital Collections", class: "search-q q form-control rounded-0", id: "q" %>

    <span class="input-group-append">
      <button type="submit" class="btn btn-primary search-btn" id="search">
        <span class="submit-search-text"><%= t('blacklight.search.form.submit') %></span>
      </button>
    </span>
  </div>
<% end %>